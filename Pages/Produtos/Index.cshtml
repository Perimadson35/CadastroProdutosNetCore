@page
@model CadastroProdutosNetCore.Pages.Produtos.IndexModel

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Código
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Disponivel)
            </th>
            <th>
                Nome do Cliente
            </th>
            <th>
                codigoid
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td class="@(item.Disponivel ? "text-success" : "text-danger")">
                @(item.Disponivel ? "Sim" : "Não")
            </td>
            <td>
                @(Model.Clientes.FirstOrDefault(c => c.IdCliente == item.IdCliente)?.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdProduto">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdProduto">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdProduto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>